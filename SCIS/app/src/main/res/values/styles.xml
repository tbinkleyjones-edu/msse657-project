<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/regisBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/regisGold</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextInputLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/regisBlue</item>
        <item name="colorAccent">@color/regisBlue</item>
        <item name="colorControlNormal">@color/regisBlue</item>
        <item name="colorControlActivated">@color/regisBlue</item>
    </style>

</resources>
