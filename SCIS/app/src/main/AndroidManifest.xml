<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.regis.msse657.scis" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.regis.msse657.scis.ProgramListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.regis.msse657.scis.CourseListActivity"
            android:label="@string/title_course_list"
            android:parentActivityName="edu.regis.msse657.scis.ProgramListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.regis.msse657.scis.ProgramListActivity" />
        </activity>
        <activity
            android:name="edu.regis.msse657.scis.CourseDetailActivity"
            android:label="@string/title_course_detail"
            android:parentActivityName="edu.regis.msse657.scis.CourseListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.regis.msse657.scis.CourseListActivity" />
        </activity>
        <activity
            android:name="edu.regis.msse657.scis.ShareActivity"
            android:label="@string/title_activity_share"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="edu.regis.msse657.scis.FeedbackActivity"
            android:label="@string/title_activity_feedback"
            android:parentActivityName="edu.regis.msse657.scis.ProgramListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.regis.msse657.scis.ProgramListActivity" />
        </activity>
        <activity
            android:name="edu.regis.msse657.scis.ChatActivity"
            android:label="@string/title_activity_chat"
            android:parentActivityName="edu.regis.msse657.scis.ProgramListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.regis.msse657.scis.ProgramListActivity" />
        </activity>

        <service
            android:name=".service.ProgramAndCourseIntentService"
            android:exported="false" >
        </service>

    </application>

</manifest>
